{
  "name": "italia-ts-commons",
  "version": "1.0.0",
  "description": "Shared TypeScript code for the Digital Citizenship projects",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "repository": "https://github.com/teamdigitale/italia-ts-types",
  "author": "https://teamdigitale.governo.it",
  "license": "MIT",
  "files": [
    "lib/"
  ],
  "scripts": {
    "prepare": "rimraf lib && npm run build",
    "build": "npm run lint && tsc",
    "postversion": "git push --tags",
    "test": "jest",
    "lint": "tslint --project .",
    "typedoc": "typedoc --out docs/ --exclude '**/__tests__/*' --module commonjs --theme minimal src",
    "docs": "rimraf docs && npm run typedoc"
  },
  "devDependencies": {
    "@types/jest": "^22.2.2",
    "@types/node": "^9.6.6",
    "@types/validator": "^6.3.0",
    "danger": "^3.1.7",
    "danger-plugin-digitalcitizenship": "^0.1.0",
    "jest": "^22.4.3",
    "prettier": "^1.12.1",
    "rimraf": "^2.6.2",
    "ts-jest": "^22.4.2",
    "tslint": "^5.1.0",
    "tslint-config-prettier": "^1.6.0",
    "tslint-immutable": "^4.5.4",
    "tslint-plugin-prettier": "^1.3.0",
    "tslint-sonarts": "^1.6.0",
    "typedoc": "^0.11.1",
    "typescript": "^2.8.0",
    "typestrict": "^0.0.6"
  },
  "dependencies": {
    "io-ts": "^1.0.5",
    "json-set-map": "^1.0.2",
    "validator": "^9.4.1"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "skipBabel": true
      }
    },
    "collectCoverage": true,
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
