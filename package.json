{
  "name": "italia-ts-commons",
  "version": "6.4.1",
  "description": "Shared TypeScript code for the IO project",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "repository": "https://github.com/pagopa/io-ts-commons",
  "author": "https://www.pagopa.gov.it",
  "license": "MIT",
  "files": [
    "lib/"
  ],
  "scripts": {
    "prepare": "rimraf lib && npm run build",
    "build": "tsc",
    "postversion": "git push && git push --tags",
    "test": "NODE_TLS_REJECT_UNAUTHORIZED=0 jest",
    "lint": "tslint --project .",
    "check-typings": "tsc -p typings-checker",
    "typedoc": "typedoc --out docs/ --exclude '**/__tests__/*' --module commonjs --theme minimal src",
    "docs": "rimraf docs && npm run typedoc && touch docs/.nojekyll"
  },
  "devDependencies": {
    "@types/express": "^4.11.1",
    "@types/jest": "^23.0.0",
    "@types/node": "^10.0.0",
    "@types/node-fetch": "^2.1.7",
    "@types/validator": "^10.11.0",
    "abort-controller": "^1.0.2",
    "danger": "^7.1.2",
    "danger-plugin-digitalcitizenship": "^0.3.1",
    "italia-tslint-rules": "^1.1.3",
    "jest": "^23.4.2",
    "mock-http-server": "^1.0.0",
    "patch-package": "^6.2.2",
    "prettier": "^1.14.3",
    "release-it": "^13.5.1",
    "rimraf": "^2.6.2",
    "ts-jest": "^23.0.1",
    "tslint": "^5.11.0",
    "typedoc": "^0.14.2",
    "typescript": "^3.6.0"
  },
  "dependencies": {
    "agentkeepalive": "https://github.com/pagopa/agentkeepalive#v4.1.1",
    "applicationinsights": "^1.7.4",
    "fp-ts": "1.17.4",
    "io-ts": "1.8.5",
    "json-set-map": "^1.0.2",
    "node-fetch": "^2.6.0",
    "validator": "^10.1.0"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "skipBabel": true
      }
    },
    "testEnvironment": "node",
    "collectCoverage": true,
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "resolutions": {
    "fp-ts": "1.17.4",
    "handlebars": "~4.5.3"
  }
}
